<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_offer_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/d_46"
    android:elevation="@dimen/d_5"
    card_view:cardBackgroundColor="@color/color_white_eeffffff"
    card_view:cardCornerRadius="@dimen/d_6"
    card_view:cardElevation="@dimen/d_5">

    <RelativeLayout
        android:id="@+id/ll_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/d_20">

        <LinearLayout
            android:id="@+id/ll_messages_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d_25"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_25"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/t_18"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvErrorMsg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/d_10"
                android:gravity="center_horizontal"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/t_15" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPopupOk"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_40"
            android:layout_below="@+id/ll_messages_container"
            android:layout_marginHorizontal="@dimen/d_32"
            android:layout_marginTop="@dimen/d_24"
            android:background="@drawable/shape_purple_rounded_4"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="@dimen/t_15" />

        <Button
            android:id="@+id/btnPopupNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_40"
            android:layout_below="@+id/btnPopupOk"
            android:layout_marginHorizontal="@dimen/d_32"
            android:layout_marginTop="@dimen/d_24"
            android:background="@drawable/shape_purple_border_rounded_4"
            android:text="@string/cancel"
            android:textColor="@color/purple_5341c7"
            android:textSize="@dimen/t_15"
            android:visibility="gone"
            tools:visibility="visible" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>